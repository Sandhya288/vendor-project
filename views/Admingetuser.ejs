<%- include("includes/header", {
    "title": "Users"
}) %>

    <style>
        /* General page styling */
        
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
            color: #333;
        }
        /* Container for the table - Ensuring it's centered horizontally */
        
        .table-container {
            width: 80%;
            max-width: 1200px;
            margin: 30px auto;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            border-radius: 8px;
        }
        /* Table styling */
        
        table {
            width: 100%;
            border-collapse: collapse;
        }
        
        table th,
        table td {
            padding: 12px 15px;
            text-align: left;
        }
        
        table th {
            background-color: #4CAF50;
            color: white;
            font-size: 16px;
        }
        
        table tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        
        table tr:hover {
            background-color: #ddd;
        }
        
        table td {
            font-size: 14px;
        }
        
        table th {
            border-bottom: 2px solid #ddd;
        }
        /* Adding some space between the header and content */
        
        h1 {
            text-align: center;
            color: #4CAF50;
            margin-top: 20px;
            font-size: 28px;
        }
        /* Search bar styling */
        
        .search-bar {
            margin: 20px 0;
            text-align: center;
        }
        
        .search-bar input {
            padding: 10px;
            font-size: 16px;
            width: 300px;
            border: 2px solid #ddd;
            border-radius: 4px;
        }
        /* Responsive styling - Adjusting for smaller screens */
        
        @media (max-width: 768px) {
            table {
                font-size: 12px;
            }
            table th,
            table td {
                padding: 10px;
            }
            .search-bar input {
                width: 80%;
            }
        }
    </style>

    <div class="table-container">
        <h1>Users Listings</h1>

        <!-- Search Bar -->
        <div class="search-bar">
            <input type="text" id="searchLocation" placeholder="Search by Name" oninput="filterTable()">
        </div>

        <!-- Table -->
        <table id="profileTable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Phone Number</th>
                    <th>Uploaded Files</th>
                    <th>Created Date</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(u => { %>
                    <tr>
                        <td>
                            <%= u.name %>
                        </td>
                        <td>
                            <%= u.email %>
                        </td>
                        <td>
                            <%= u.role %>
                        </td>
                        <td>
                            <%= u.phone %>
                        </td>
                        <td>
                            <% if (u.uploaded && u.uploaded.length > 0) { %>
                                <ul>
                                    <% u.uploaded.forEach(file => { %>
                                        <li>
                                            <%= file.name %> (Size:
                                                <%= file.size %> bytes)</li>
                                        <% }) %>
                                </ul>
                                <% } else { %>
                                    No files uploaded.
                                    <% } %>
                        </td>
                        <td>
                            <%= u.createdAt %>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

    <%- include("includes/footer") %>

        <script>
            function filterTable() {
                const input = document.getElementById('searchLocation');
                const filter = input.value.toLowerCase();
                const table = document.getElementById('profileTable');
                const rows = table.getElementsByTagName('tr');

                for (let i = 1; i < rows.length; i++) { // Starting from 1 to skip header row
                    const nameTd = rows[i].getElementsByTagName('td')[0]; // Name column (index 0)
                    const emailTd = rows[i].getElementsByTagName('td')[1]; // Email column (index 1)

                    if (nameTd || emailTd) {
                        const nameText = nameTd.textContent || nameTd.innerText;
                        const emailText = emailTd.textContent || emailTd.innerText;

                        // Check if either name or email contains the filter text
                        if (nameText.toLowerCase().indexOf(filter) > -1 || emailText.toLowerCase().indexOf(filter) > -1) {
                            rows[i].style.display = "";
                        } else {
                            rows[i].style.display = "none";
                        }
                    }
                }
            }
        </script>