<%- include("includes/header", { "title": "Coupon" }) %>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        
        .table-container {
            max-width: 50%;
            margin: 40px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        
        h1 {
            text-align: center;
            color: #333;
        }
        
        .search-bar {
            text-align: center;
            margin-bottom: 20px;
        }
        
        .search-bar input {
            padding: 10px;
            width: 50%;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
        }
        
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        
        thead th {
            background-color: #0fcb35;
            color: #fff;
            padding: 12px;
            text-align: left;
        }
        
        tbody tr:nth-child(odd) {
            background-color: #f9f9f9;
        }
        
        tbody tr:nth-child(even) {
            background-color: #e9e9e9;
        }
        
        tbody td {
            padding: 10px;
            color: #333;
        }
        
        tbody td a {
            color: #007bff;
            text-decoration: none;
        }
        
        tbody td a:hover {
            text-decoration: underline;
        }
        
        tbody tr:hover {
            background-color: #d1ecf1;
        }
        /* Modal styles */
        
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.8);
            justify-content: center;
            align-items: center;
        }
        
        .modal-content {
            position: relative;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            max-width: 500px;
            width: 90%;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
        
        .modal-content .image-container {
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .modal-content img {
            max-width: 100%;
            border-radius: 10px;
        }
        
        .modal-content .overlay-text {
            position: absolute;
            color: #fff;
            background-color: rgba(0, 0, 0, 0.6);
            padding: 10px 20px;
            border-radius: 5px;
            text-align: center;
            font-size: 18px;
            font-weight: bold;
        }
        
        .close {
            position: absolute;
            top: 10px;
            right: 10px;
            font-size: 24px;
            color: #333;
            cursor: pointer;
        }
        
        .modal-content p {
            margin: 10px 0;
            font-size: 16px;
            color: #333;
        }
    </style>

    <div class="table-container">
        <h1>Coupons Added Vendors</h1>
        <div class="search-bar">
            <input type="text" id="searchLocation" placeholder="Search by Location" oninput="filterTable()">
        </div>
        <table id="profileTable">
            <thead>
                <tr>
                    <th>Location</th>
                    <th>Coupons</th>

                </tr>
            </thead>
            <tbody>
                <% profile.forEach(p => { %>
                    <tr>
                        <td>
                            <%= p.location %>
                        </td>

                        <td>
                            <% if (p.coupon) { %>
                                <span onclick="showCouponModal('<%= p.coupon %>', '<%= p.name %>', '<%= p.storelink %>')">
                                    <%= p.coupon %>
                                    <i class="fas fa-coins" style="color: gold;"></i>
                                </span>

                                <% } else { %>
                                    <span>No Coupons</span>
                                    <% } %>
                        </td>

                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Modal -->
    <div id="couponModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeCouponModal()">&times;</span>
            <div class="image-container">
                <img id="couponImage" src="" alt="Coupon Image">
                <div id="couponText" class="overlay-text"></div>
            </div>
        </div>
    </div>


    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <%- include("includes/footer") %>

