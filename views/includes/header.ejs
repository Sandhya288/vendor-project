    <!-- Custom Styles -->
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        
        .sidebar {
            width: 250px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            transform: translateX(-100%);
            z-index: 1000;
            /* Ensures the sidebar is on top of other content */
            overflow-y: auto;
            /* Makes the sidebar scrollable */
            position: fixed;
            /* Keeps the sidebar fixed on the screen */
            top: 0;
            left: 0;
            height: 100vh;
            /* Ensures the sidebar spans the full height of the viewport */
            background-color: #f8f9fa;
        }
        
        .sidebar.visible {
            transform: translateX(0);
        }
        
        .sidebar h3 {
            font-size: 1.5rem;
            font-weight: bold;
            margin-left: 40px;
        }
        
        .toggle-btn {
            position: fixed;
            top: 10px;
            left: 10px;
            z-index: 5000;
            /* Keeps the toggle button above the sidebar */
            border: none;
            width: 40px;
            height: 40px;
            background-color: #007bff;
            color: white;
            border-radius: 50%;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .nav-link {
            color: #333;
            padding: 10px 15px;
            display: flex;
            align-items: center;
            transition: background 0.3s ease;
        }
        
        .nav-link i {
            margin-right: 10px;
            font-size: 1.2rem;
        }
        
        .nav-link:hover {
            background: #f1f1f1;
            color: #007bff;
        }
        
        .nav-link.active {
            background: #007bff;
            color: white;
        }
        
        #main-content {
            margin-left: 0;
            transition: margin-left 0.3s ease;
        }
        
        #main-content.expanded {
            margin-left: 250px;
        }
    </style>

    <!-- JavaScript for Toggle -->
    <script>
        const sidebar = document.getElementById("sidebar");
        const toggleBtn = document.getElementById("toggle-sidebar");

        toggleBtn.addEventListener("click", () => {
            sidebar.classList.toggle("visible");
        });

        document.addEventListener("click", (event) => {
            if (!sidebar.contains(event.target) && !toggleBtn.contains(event.target)) {
                sidebar.classList.remove("visible");
            }
        });
    </script>
</body>

