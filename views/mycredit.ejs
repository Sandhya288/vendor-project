<%- include("includes/header", {
    "title": "My Credit"
}) %>
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>My Credit</title>
        <style>
            body {
                font-family: 'Poppins', Arial, sans-serif;
                margin: 0;
                padding: 0;
                background-color: #f7f7f7;
                color: #333;
            }
            
            .container {
                width: 100%;
                max-width: 700px;
                margin: 50px auto;
                padding: 30px;
                background: #fff;
                border-radius: 12px;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            }
            
            h1,
            h2 {
                text-align: center;
                font-size: 2rem;
                margin-bottom: 20px;
                color: #4e73df;
            }
            
            .balance {
                text-align: center;
                font-size: 1.5rem;
                font-weight: bold;
                margin-bottom: 25px;
                color: #555;
            }
            
            form {
                display: flex;
                flex-direction: column;
                gap: 15px;
                margin-bottom: 30px;
            }
            
            input,
            button,
            select {
                padding: 12px;
                font-size: 1rem;
                border: 1px solid #ccc;
                border-radius: 8px;
                outline: none;
                transition: border-color 0.3s ease;
            }
            
            input:focus,
            select:focus {
                border-color: #4e73df;
            }
            
            button {
                background-color: #4e73df;
                color: #fff;
                border: none;
                cursor: pointer;
                transition: background-color 0.3s;
                font-size: 1.1rem;
            }
            
            button:hover {
                background-color: #2e59d9;
            }
            
            table {
                width: 100%;
                border-collapse: collapse;
                margin-top: 20px;
            }
            
            table th,
            table td {
                padding: 15px;
                text-align: left;
                border: 1px solid #ddd;
                font-size: 1rem;
                color: #555;
            }
            
            table th {
                background-color: #4e73df;
                color: #fff;
                text-transform: uppercase;
                font-weight: 600;
            }
            
            table td {
                background-color: #f9f9f9;
            }
            
            table tr:nth-child(even) td {
                background-color: #f1f1f1;
            }
            
            table td,
            table th {
                word-wrap: break-word;
            }
            
            h2,
            h3 {
                color: #4e73df;
                margin-bottom: 20px;
                margin-top: 20px;
                font-size: 1.5rem;
                font-weight: bold;
            }
            
            .no-data {
                text-align: center;
                color: #888;
                font-style: italic;
                margin-top: 30px;
                font-size: 1.2rem;
            }
            
            .no-data p {
                color: #007bff;
            }
            /* Responsive Design */
            
            @media screen and (max-width: 768px) {
                .container {
                    padding: 20px;
                    margin: 20px;
                }
                h1 {
                    font-size: 1.6rem;
                }
                .balance {
                    font-size: 1.3rem;
                }
                table th,
                table td {
                    padding: 10px;
                    font-size: 0.9rem;
                }
                .no-data p {
                    font-size: 1rem;
                }
                button {
                    font-size: 1rem;
                }
            }
        </style>
    </head>

    <body>
        <div class="container">
            <h1>My Credit</h1>

            <!-- Current Balance -->
            <div class="balance">
                Current Balance: ₹
                <%= currentBalance.toFixed(2) %>
            </div>

            <!-- Add Money Form -->
            <form method="POST" action="/mycredit">
                <input type="number" name="amount" placeholder="Enter Amount" required />
                <input type="text" name="purpose" placeholder="Enter Purpose" required />

                <select name="transactionType" id="transactionType" required>
                    <option value="Credit">Credit</option>
                    <option value="Debit">Debit</option>
                </select>

                <input type="text" name="reason" id="reason" placeholder="Enter Reason or Recipient" style="display:none;" />

                <button type="submit">Submit</button>
            </form>


            <!-- Transaction History Grouped by Purpose -->
            <!-- Transaction History Grouped by Purpose -->
            <h2>Transaction History</h2>
            <% 
            // Group transactions by purpose
            const groupedTransactions = transactions.reduce((groups, txn) => {
                (groups[txn.purpose] = groups[txn.purpose] || []).push(txn);
                return groups;
            }, {});
            
            // Calculate totals for each purpose
            const totals = {};
            Object.keys(groupedTransactions).forEach(function(purpose) {
                totals[purpose] = groupedTransactions[purpose].reduce((sum, txn) => {
                    return txn.type === 'Credit' ? sum + txn.amount : sum - txn.amount;
                }, 0);
            });
            %>

                <!-- Render each group -->
                <% Object.keys(groupedTransactions).forEach(function(purpose) { %>
                    <h3>
                        <%= purpose %> - Total: ₹
                            <%= totals[purpose].toFixed(2) %>
                    </h3>
                    <table>
                        <thead>
                            <tr>
                                <th>Amount</th>
                                <th>Type</th>
                                <th>Date</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% groupedTransactions[purpose].forEach(function (txn) { %>
                                <tr>
                                    <td>₹
                                        <%= txn.amount.toFixed(2) %>
                                    </td>
                                    <td>
                                        <%= txn.type %>
                                    </td>
                                    <td>
                                        <%= new Date(txn.date).toLocaleDateString() %>
                                    </td>
                                    <td>
                                        <% if (txn.type === 'Debit') { %>
                                            Debit -
                                            <%= txn.reason ? txn.reason : 'N/A' %>
                                                <% } else { %>
                                                    N/A
                                                    <% } %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <% }) %>

        </div>
    </body>

    <script>
        // Show the reason field only if "Debit" is selected
        document.getElementById('transactionType').addEventListener('change', function() {
            const reasonField = document.getElementById('reason');
            if (this.value === 'Debit') {
                reasonField.style.display = 'block';
            } else {
                reasonField.style.display = 'none';
            }
        });
    </script>

    </html>
    <%- include("includes/footer") %>