<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= website && website.name ? website.name : 'Website' %> - Website
    </title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            display: flex;
            position: relative;
            font-family: 'Poppins', Arial, sans-serif;
            background-color: #dde1e5;
            color: #333;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
            box-sizing: border-box;
        }
        
        .navbar {
            background-color: #8e34b4;
            padding: 10px 20px;
            display: flex;
            justify-content: center;
            position: sticky;
            top: 0;
            height: 30px;
            z-index: 1000;
            width: 100%;
        }
        
        .navbar a {
            color: white;
            text-decoration: none;
            margin: 0 10px;
            font-weight: 600;
            font-size: 1rem;
        }
        
        .navbar a:hover {
            text-decoration: underline;
        }
        
        .website-container {
            overflow-y: auto;
            width: 100%;
            max-width: 1200px;
            padding: 15px;
            box-sizing: border-box;
        }
        
        .website-header {
            text-align: center;
            margin-bottom: 20px;
            border-bottom: 2px solid #f1f1f1;
            padding-bottom: 10px;
        }
        
        .website-header h1 {
            font-size: 2rem;
            color: #007bff;
        }
        
        .website-content {
            margin-top: 15px;
            line-height: 1.5;
        }
        
        .website-content h3 {
            font-size: 1.3rem;
            margin-bottom: 8px;
            color: #555;
            font-weight: 600;
        }
        
        .website-content p {
            font-size: 1rem;
            margin-bottom: 15px;
            color: #777;
            word-wrap: break-word;
        }
        
        .website-content ul {
            list-style-type: none;
            margin-left: 0;
            padding-left: 0;
        }
        
        .website-content ul li {
            font-size: 1rem;
            margin-bottom: 10px;
            color: #444;
        }
        
        .website-content a {
            color: #007bff;
            text-decoration: none;
            font-weight: 500;
        }
        
        .website-content a:hover {
            text-decoration: underline;
        }
        
        .project-card-container {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            margin-top: 20px;
            justify-content: center;
        }
        
        .main {
            background-color: #f4f8fb;
            background-position: center;
            align-items: center;
            text-align: center;
            padding: 40px 5px;
            font-size: 28px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        }
        
        .project-card {
            background-color: #f9fafb;
            border: 1px solid #e0e0e0;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: calc(100% - 30px);
            /* Default for small screens */
            max-width: 300px;
            transition: transform 0.3s;
            background-color: #f0f9ff;
        }
        
        @media (min-width: 481px) {
            .project-card {
                width: calc(45% - 15px);
            }
        }
        
        @media (min-width: 769px) {
            .project-card {
                width: calc(28.333% - 15px);
            }
        }
        
        .share-modal {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: white;
            padding: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            z-index: 2000;
            text-align: center;
        }
        
        .share-modal-content h3 {
            margin-bottom: 10px;
        }
        
        .share-icons {
            display: flex;
            justify-content: center;
            gap: 15px;
        }
        
        .share-icons a {
            font-size: 2rem;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            color: white;
        }
        
        .whatsapp-icon {
            background: #25D366;
            padding: 12px;
        }
        
        .email-icon {
            background: #d44638;
            padding: 12px;
        }
        
        .share-icons a:hover {
            opacity: 0.8;
        }
        
        button {
            padding: 8px 12px;
            border: none;
            background: #007bff;
            color: white;
            cursor: pointer;
            border-radius: 5px;
            margin-top: 10px;
        }
        
        .project-card h4 {
            font-size: 1.2rem;
            color: #333;
            margin-bottom: 10px;
            font-weight: 600;
        }
        
        .content-container {
            background-image: url(https://img.freepik.com/free-photo/abstract-textured-backgound_1258-30714.jpg?t=st=1741631152~exp=1741634752~hmac=8b3dba463e5581b9ad1c65360d686f879e385c1a88effcf7dcde49c80c7f7d30&w=1060);
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            border-radius: 12px;
            padding: 20px;
            margin: 0;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }
        
        .content-container h1,
        .content-container h3,
        .content-container p {
            color: rgb(0, 0, 0);
        }
        
        .project-card p {
            font-size: 0.9rem;
            color: #666;
        }
        
        .project-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
        }
        
        .project-card a {
            display: inline-block;
            margin-top: 10px;
            font-size: 0.9rem;
            color: #007bff;
            text-decoration: none;
        }
        
        .project-card a:hover {
            text-decoration: underline;
        }
        
        .action-buttons {
            position: absolute;
            z-index: 1000;
            top: 10px;
            right: 20px;
        }
        
        .share-icon {
            font-size: 2rem;
            color: #ffffff;
            cursor: pointer;
            transition: color 0.3s, transform 0.3s;
        }
        
        .share-icon:hover {
            color: #218838;
            transform: scale(1.2);
        }
        
        .action-buttons button {
            padding: 10px 15px;
            font-size: 1rem;
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
            background-color: #28a745;
        }
        
        .action-buttons button:hover {
            background-color: #218838;
            transform: scale(1.05);
        }
        
        .contact-container {
            height: 200px;
            background-size: cover;
            background-position: center;
            align-items: center;
            text-align: center;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            margin-top: 15px;
        }
        
        .contact-container h3 {
            font-size: 1.5rem;
            margin-bottom: 15px;
        }
        
        .contact-container ul {
            display: flex;
            align-items: center;
            flex-direction: column;
            gap: 8px;
        }
        
        .contact-container ul li {
            display: flex;
            align-items: center;
            font-size: 1rem;
        }
        
        .contact-container ul li .icon {
            font-size: 1.5rem;
            color: #007bff;
            margin-right: 8px;
        }
        
        .contact-container ul li .phone-icon {
            color: #28a745;
        }
        
        .contact-container ul li .linkedin-icon {
            color: #0270ab;
        }
        
        .contact-container ul li .github-icon {
            color: #333;
        }
    </style>
</head>

<body>

    <div class="navbar">
        <a href="#about" onclick="showSection('about')">About</a>
        <a href="#projects" onclick="showSection('projects')">Projects</a>
        <a href="#contact" onclick="showSection('contact')">Contact</a>
    </div>

    <div class="website-container">
        <% if (website && website.name) { %>

            <div class="main">
                <div class="content-container" id="about">
                    <div class="website-header">
                        <h1>
                            <%= website.name %>
                        </h1>
                    </div>
                    <div class="website-content">
                        <% if (website.email) { %>
                            <h3>Email:</h3>
                            <p>
                                <%= website.email %>
                            </p>
                            <% } else { %>
                                <h3>Email:</h3>
                                <p>Not provided</p>
                                <% } %>

                                    <% if (website.about) { %>
                                        <h3> About:</h3>
                                        <p>
                                            <%= website.about %>
                                        </p>
                                        <% } else { %>
                                            <h3>About:</h3>
                                            <p>No description available.</p>
                                            <% } %>
                    </div>
                </div>

                <div class="content-container" id="projects">
                    <h3>Projects:</h3>
                    <div class="website-content">
                        <div class="project-card-container">
                            <% if (website.project1) { %>
                                <div class="project-card">
                                    <h4>
                                        <%= website.project1 %>
                                    </h4>
                                    <a href="<%= website.project1Link || '#' %>" target="_blank">View Project</a>
                                </div>
                                <% } %>
                                    <% if (website.project2) { %>
                                        <div class="project-card">
                                            <h4>
                                                <%= website.project2 %>
                                            </h4>
                                            <a href="<%= website.project2Link || '#' %>" target="_blank">View Project</a>
                                        </div>
                                        <% } %>
                                            <% if (website.project3) { %>
                                                <div class="project-card">
                                                    <h4>
                                                        <%= website.project3 %>
                                                    </h4>
                                                    <a href="<%= website.project3Link || '#' %>" target="_blank">View Project</a>
                                                </div>
                                                <% } %>
                        </div>
                    </div>
                </div>

                <div class="content-container" id="contact">
                    <h3>Contact:</h3>
                    <div class="contact-container">
                        <ul>
                            <% if (website.linkedin) { %>
                                <li>
                                    <i class="fas fa-linkedin linkedin-icon icon"></i> LinkedIn:
                                    <a href="<%= website.linkedin %>" target="_blank">
                                        <%= website.linkedin %>
                                    </a>
                                </li>
                                <% } %>
                                    <% if (website.github) { %>
                                        <li>
                                            <i class="fab fa-github github-icon icon"></i> GitHub:
                                            <a href="<%= website.github %>" target="_blank">
                                                <%= website.github %>
                                            </a>
                                        </li>
                                        <% } %>
                                            <% if (website.contactno) { %>
                                                <li>
                                                    <i class="fas fa-phone-alt phone-icon icon"></i> Contact No:
                                                    <%= website.contactno %>
                                                </li>
                                                <% } else { %>
                                                    <li>
                                                        <i class="fas fa-phone-alt phone-icon icon"></i> Contact No: Not provided
                                                    </li>
                                                    <% } %>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="action-buttons">
                <i class="fas fa-share-alt share-icon" onclick="openShareOptions('<%= website._id %>')" title="Share Link"></i>
            </div>

            <!-- Share Modal -->
            <div id="shareModal" class="share-modal">
                <div class="share-modal-content">
                    <h3>Share via</h3>
                    <div class="share-icons">
                        <a id="whatsappShare" target="_blank">
                            <i class="fab fa-whatsapp whatsapp-icon"></i>
                        </a>
                        <a id="emailShare">
                            <i class="fas fa-envelope email-icon"></i>
                        </a>
                    </div>
                    <button onclick="closeShareOptions()">Close</button>
                </div>
            </div>



            <% } else { %>
                <div class="website-header">
                    <h1>Website not found</h1>
                </div>
                <p>The website you are looking for does not exist or has been removed.</p>
                <% } %>
    </div>

    <script>
        function openShareOptions(id) {
            const websiteLink = `${window.location.origin}/website/view/${id}`;

            document.getElementById('whatsappShare').href = `https://api.whatsapp.com/send?text=Check%20this%20out:%20${encodeURIComponent(websiteLink)}`;
            document.getElementById('emailShare').href = `mailto:?subject=Check%20this%20website&body=${encodeURIComponent(websiteLink)}`;

            document.getElementById('shareModal').style.display = 'block';
        }

        function closeShareOptions() {
            document.getElementById('shareModal').style.display = 'none';
        }

        function shareWebsite(id) {
            const websiteLink = `${window.location.origin}/website/view/${id}`;
            navigator.clipboard.writeText(websiteLink).then(() => {
                alert('Link copied to clipboard!');
            }).catch((err) => {
                console.error('Error copying link:', err);
                alert('Failed to copy the link.');
            });
        }

        function showSection(section) {
            const sections = document.querySelectorAll('.content-container');
            sections.forEach((el) => {
                el.style.display = 'none'; // Hide all sections
            });

            const activeSection = document.getElementById(section);
            activeSection.style.display = 'block'; // Show the selected section
        }

        // Show the 'About' section by default
        showSection('about');
    </script>
</body>

</html>